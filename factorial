// find factorial of a number using recursion

#include<iostream>
using namespace std ;

int factorial(int n){
    if(n == 1)
    return 1;
    return n * factorial(n-1) ;

}

int main(){
    int n ;
    cout << "enter number to find the factorial : ";
    cin >> n ;
    int ans = factorial(n);
    cout << "factorial of " << n << "  is " << ans ;
}
